<h1>Articles</h1>

<h2> <%= link_to "New article", new_article_path %>   </h2>

<% @articles.each do |article| %>
  <h3> <%= link_to article.title, article_path(article) %> <%= link_to edit_article_path(article) do %>
    <i class="fas fa-edit"></i>
  <% end %>
  <%= link_to article_path(article), method: :delete, data: {confirm: "Are you sure?"}  do %>
  <i class="fas fa-trash-alt"></i>
<% end %> </h3>
  <p> <%= article.content %>  </p>
<% end %>





